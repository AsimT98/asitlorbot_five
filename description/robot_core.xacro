        <mu2>0.05</mu2>
        <!-- <maxVel>0.0</maxVel>
        <minDepth>0.001</minDepth> -->
    </gazebo>


    <!-- RIGHT BACK WHEEL -->

    <joint name="right_back_wheel_hinge" type="continuous">
